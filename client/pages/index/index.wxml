<!--index.wxml-->
<view class='page'>
  <view class='body'>
    <view class='list' wx:for="{{array}}">
      <view class='item'>
        <view class='left'>
          <image class='pic' src='{{item.pic}}'></image>
        </view>
        <view class='right'>
          <view class='name'>
            {{item.name}}
          </view>
          <view class='note'>
            <text>{{item.content}}</text>
          </view>
        </view>
      </view>
    </view>
    <view class='bottom'>
      <!-- 写留言 -->
      <view class='input'>
        <input bindinput='confirm' placeholder='留言内容' />
      </view>
      <view class='btn'>
        <button bindtap='click'>发送</button>
      </view>
    </view>
  </view>
</view>

